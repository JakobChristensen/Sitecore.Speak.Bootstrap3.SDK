<Layout xmlns="http://www.sitecore.net/Sitecore-Speak-Intellisense/SitecoreSpeak72/core" ItemId="{9BFEFFF5-B11C-4E3A-B399-98D3BE8E910F}">
  <Device Name="Internet Explorer" Layout="/sitecore">
    <Bootstrap3-Row Id="ButtonDropdownMenusRow">
      <Bootstrap3-PageHeader Text="Button dropdown menus" />
      <Bootstrap3-Paragraph Text="Use any button to trigger a dropdown menu by placing it within a .btn-group and providing the proper menu markup." />
      <Bootstrap3-ButtonDropdown ItemsDataSource="/sitecore/client/Bootstrap3/Content/Bootstrap3/Components/PageSettings/Menu" Text="Default" />
      <Bootstrap3-ButtonDropdown ItemsDataSource="/sitecore/client/Bootstrap3/Content/Bootstrap3/Components/PageSettings/Menu" Text="Primary" Type="Primary" />
      <Bootstrap3-ButtonDropdown ItemsDataSource="/sitecore/client/Bootstrap3/Content/Bootstrap3/Components/PageSettings/Menu" Text="Danger" Type="Danger" />
      <Bootstrap3-ButtonDropdown ItemsDataSource="/sitecore/client/Bootstrap3/Content/Bootstrap3/Components/PageSettings/Menu" Text="Warning" Type="Warning" />
      <Bootstrap3-ButtonDropdown ItemsDataSource="/sitecore/client/Bootstrap3/Content/Bootstrap3/Components/PageSettings/Menu" Text="Success" Type="Success" />
      <Bootstrap3-ButtonDropdown ItemsDataSource="/sitecore/client/Bootstrap3/Content/Bootstrap3/Components/PageSettings/Menu" Text="Link" Type="Link" />
      
      <Bootstrap3-Heading3 Text="Works with all button sizes" />
      <Bootstrap3-ButtonDropdown ItemsDataSource="/sitecore/client/Bootstrap3/Content/Bootstrap3/Components/PageSettings/Menu" Size="Large" Text="Large" />
      <Bootstrap3-ButtonDropdown ItemsDataSource="/sitecore/client/Bootstrap3/Content/Bootstrap3/Components/PageSettings/Menu" Text="Default" />
      <Bootstrap3-ButtonDropdown ItemsDataSource="/sitecore/client/Bootstrap3/Content/Bootstrap3/Components/PageSettings/Menu" Size="Small" Text="Small" />
      <Bootstrap3-ButtonDropdown ItemsDataSource="/sitecore/client/Bootstrap3/Content/Bootstrap3/Components/PageSettings/Menu" Size="Mini" Text="Extra Small" />

      <Bootstrap3-Heading3 Text="Disabled" />
      <Bootstrap3-ButtonDropdown ItemsDataSource="/sitecore/client/Bootstrap3/Content/Bootstrap3/Components/PageSettings/Menu" IsEnabled="False" Text="Disabled" />
    </Bootstrap3-Row>
  </Device>
</Layout>