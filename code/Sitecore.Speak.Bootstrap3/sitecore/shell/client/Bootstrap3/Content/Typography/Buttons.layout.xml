<Layout xmlns="http://www.sitecore.net/Sitecore-Speak-Intellisense/SitecoreSpeak72/core" ItemId="{F71F205F-676D-4F0E-BEFC-A075A862B70E}">
  <Device Name="Internet Explorer" Layout="/sitecore">
    <Bootstrap3-Row Id="ButtonsRow" ExtraSmall="*" Large="*" Medium="12" Small="*">
      <Bootstrap3-PageHeader Text="Buttons" />
      <Bootstrap3-Heading2 />
      <Bootstrap3-Paragraph Text="Button styles can be applied to anything with the .btn class applied. However, typically you'll want to apply these to only a and button elements for the best rendering." />
      <Bootstrap3-Button Click="javascript:alert('123')" Text="Default" Type="Default" />
      <Bootstrap3-Button Text="Primary" Type="Primary" />
      <Bootstrap3-Button Text="Info" Type="Info" />
      <Bootstrap3-Button Text="Success" Type="Success" />
      <Bootstrap3-Button Text="Warning" Type="Warning" />
      <Bootstrap3-Button Text="Danger" Type="Danger" />
      <Bootstrap3-Button Text="Link" Type="Link" />
      
      <Bootstrap3-Heading2 Text="Buttons sizes" />
      <Bootstrap3-Paragraph Text="Fancy larger or smaller buttons? Add .btn-lg, .btn-sm, or .btn-xs for additional sizes." />
      <Bootstrap3-Button Size="Large" Text="Large" />
      <Bootstrap3-Button Size="Default" Text="Default" />
      <Bootstrap3-Button Size="Small" Text="Small" />
      <Bootstrap3-Button Size="Mini" Text="Extra Small" />

      <Bootstrap3-Paragraph Text="Create block level buttons—those that span the full width of a parent— by adding .btn-block." />
      <Bootstrap3-Button IsBlock="True" Text="Primary" Type="Primary" />
      <Bootstrap3-Button IsBlock="True" Text="Button" />
      
      <Bootstrap3-Heading2 Text="Disabled state" />
      <Bootstrap3-Paragraph Text="Add the disabled attribute to button buttons." />
      <Bootstrap3-Button IsEnabled="False" Text="Primary" Type="Primary" />
      <Bootstrap3-Button IsEnabled="False" Text="Button" />
    </Bootstrap3-Row>
  </Device>
</Layout>